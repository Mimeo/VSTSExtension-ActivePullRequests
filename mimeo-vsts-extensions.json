{
  "manifestVersion": 1,
  "id": "mimeo-active-pull-requests",
  "publisher": "mimeo",
  "version": "0.2.4",
  "name": "Active Pull Requests",
  "description": "View all active pull requests across all repos in a team.",
  "public": true,
  "targets": [
      {
        "id" : "Microsoft.VisualStudio.Services"  
      }
  ],
  "icons": {
      "default": "images/pullRequest.png"
  },
  "categories": [
      "Code"
  ],
  "tags": [
      "pullrequest",
      "pullrequests",
      "pull-request",  
      "pull-requests",
      "code",
      "code-review"  
  ],
  "screenshots": [
      {
          "path": "images/screenshot_sm.png"
      },  
      {
          "path": "images/screenshot.png"
      }  
  ],
  "content": {
      "details": {
          "path": "overview.md"
      },
      "license": {
          "path": "LICENSE"
      }
  },
  "links": {
      "learn": {
          "uri": "https://github.com/mimeo/vstSExtension-ActivePullRequests/"
      },  
      "support": {
          "uri": "https://github.com/mimeo/vstSExtension-ActivePullRequests/issues"
      }
  },
  "branding": {
      "color": "#3F99D3",
      "theme": "light"  
  },
  "contributions": [
    {
      "id": "active-pull-requests-extension-hub",
      "type": "ms.vss-web.hub",
      "description": "View all active pull requests across all repos in a team.",
      "targets": [
        "ms.vss-code-web.code-hub-group"
      ],
      "properties": {
        "name": "All Active Pull Requests",
        "order": 100,
        "uri": "wwwroot/hub.html"
      }
    }
  ],
  "scopes": [
      "vso.code"
  ],
  "files": [
      {
          "path": "wwwroot/hub.html", "addressable" : "true"
      },
      {
          "path": "wwwroot/sdk/scripts", "addressable" : "true"
      },
      {
          "path": "images/logo.png", "addressable" : "true"
      }
  ]
}
